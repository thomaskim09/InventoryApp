<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17" fx:controller="com.inventory.SupplierController" spacing="10" styleClass="root">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

    <SplitPane dividerPositions="0.6" VBox.vgrow="ALWAYS">
        <items>
            <TableView fx:id="tableView">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                    <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name" />
                    <TableColumn fx:id="contactColumn" prefWidth="150.0" text="Contact Person" />
                    <TableColumn fx:id="emailColumn" prefWidth="150.0" text="Email" />
                    <TableColumn fx:id="phoneColumn" prefWidth="100.0" text="Phone" />
                </columns>
                <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>

            <AnchorPane>
                <VBox spacing="20" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
                    <children>
                        <Label text="Supplier Details" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                        <GridPane hgap="10" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="Name" GridPane.rowIndex="0" />
                                <TextField fx:id="nameInput" promptText="Supplier Name" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                
                                <Label text="Contact" GridPane.rowIndex="1" />
                                <TextField fx:id="contactInput" promptText="Contact Person" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                
                                <Label text="Email" GridPane.rowIndex="2" />
                                <TextField fx:id="emailInput" promptText="Email Address" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                
                                <Label text="Phone" GridPane.rowIndex="3" />
                                <TextField fx:id="phoneInput" promptText="Phone Number" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                            </children>
                        </GridPane>

                        <HBox spacing="10" alignment="CENTER">
                            <children>
                                <Button text="New" onAction="#handleNewSupplier" />
                                <Button text="Save" onAction="#handleSaveSupplier" />
                                <Button text="Delete" onAction="#handleDeleteSupplier" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </AnchorPane>
        </items>
    </SplitPane>
</VBox>
