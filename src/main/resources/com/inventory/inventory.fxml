<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.inventory.InventoryController">
    <children>
        <TableView fx:id="tableView" prefHeight="200.0" prefWidth="400.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name" />
                <TableColumn fx:id="quantityColumn" prefWidth="100.0" text="Quantity" />
                <TableColumn fx:id="priceColumn" prefWidth="100.0" text="Price" />
            </columns>
        </TableView>

        <HBox spacing="10" alignment="CENTER">
            <children>
                <TextField fx:id="nameInput" promptText="Name" />
                <TextField fx:id="quantityInput" promptText="Quantity" />
                <TextField fx:id="priceInput" promptText="Price" />
            </children>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <children>
                <Button text="Add Item" onAction="#handleAddItem"/>
                <Button text="Update Item" onAction="#handleUpdateItem"/>
                <Button text="Delete Item" onAction="#handleDeleteItem"/>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>